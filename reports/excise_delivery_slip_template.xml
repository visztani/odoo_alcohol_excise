<odoo>
    <template id="form_excise_delivery_slip_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h1>Jövedéki Szállítólevél</h1>
                        </div>
                        <h3>Bizonylatszám:
                            <span t-field="o.name"/>
                        
                            Dátum:
                            <span t-field="o.date"/>

                            Címzett:
                            <span t-field="o.partner_id.name"/>

                            Szállítsási cím:
                            <span t-field="o.partner_id.zip"/> 
                            <span t-field="o.partner_id.city"/> 
                            <span t-field="o.partner_id.street"/>

                            Adószám: 
                            <span t-field="o.partner_id.vat"/>

                            Nyilvántartási szám:
                            <span t-field="o.partner_id.excise_partner_nyilvantartasi_szam"/>             

                            Feladó:
                            <span t-field="o.company_id.name"/>

                            Adómennyiség kód:
                            <span t-field="o.excise_adomennyiseg_kod"/>

                            Jogcímkód:
                            <span t-field="o.excise_jogcimkod"/>

                            Total HLF:
                            <span t-field="o.excise_picking_hlf"/>

                            Product:
                            <span t-field="o.product_id.name"/>

                            Fajtakód:
                            

                        </h3>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>