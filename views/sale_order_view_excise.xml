<odoo>
    <record model="ir.ui.view" id="sale_order_am_excise">
        <field name="name">excise.sale_order_am_inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="excise_jogcimkod"/>
                <field name="excise_adomennyiseg_kod"/>
                <field name="excise_car_no"/>
                <field name="excise_sale_order_hlf"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_sale_order_line_form_inherit">
            <field name="name">sale.order.line.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="total_hlf"/>
                    <field name="excise_line_fajtakod"/>
                    <field name="excise_line_knkod"/>
                    <field name="excise_line_jogcimkod" attrs="{'readonly': [('order_id.state', 'in', ['sale', 'done', 'cancel'])]}"/>
                    <field name="excise_sale_order_line_biztositek"/>
                </xpath>
            </field>
    </record>
</odoo>
