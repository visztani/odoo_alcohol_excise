<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_form_extension" model="ir.ui.view">
            <field name="name">stock.picking.form.extension</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="excise_partner_whno"/>
                    <field name="excise_ahk"/>
                    <field name="excise_jogcimkod"/>
                    <field name="excise_adomennyiseg_kod"/>
                    <field name="excise_car_no"/>
                    <field name="excise_picking_hlf"/>
                </xpath>
            </field>
        </record>

        <record id="view_stock_move_form_extension" model="ir.ui.view">
            <field name="name">stock.move.form.extension</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="total_hlf"/>
                    <field name="excise_move_fajtakod"/>
                    <field name="excise_move_knkod"/>
                    <field name="excise_move_guarantee"/>
                    <field name="excise_stock_type"/>
                </xpath>
            </field>
        </record>

