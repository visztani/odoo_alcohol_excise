<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_form_extension" model="ir.ui.view">
            <field name="name">stock.picking.form.extension</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="excise_adomennyiseg_kod"/>
                    <field name="excise_jogcimkod"/>
                    <field name="excise_picking_hlf"/>
                </xpath>
            </field>
        </record>

        <record id="view_stock_picking_line_form_extension" model="ir.ui.view">
            <field name="name">stock.picking.line.form.extension</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="total_hlf"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>